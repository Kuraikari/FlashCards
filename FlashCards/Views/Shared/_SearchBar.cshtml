@using FlashCards.Enums;

@{
    var pathArray = Context.Request.Path.ToString().Split('/');
    var path = pathArray.Last() ?? "Index";
}

<header>
    <div class="search-bar-wrapper">
        <label class="search-bar-toggle" for="searchbartoggle">
            <input type="checkbox" id="searchbartoggle" />
            <span></span>
        </label>
        <form class="form-inline my-2 my-lg-0 search-bar" method="get" action="@Url.Action(path, "Home")">
            @(Html.DropDownList("topic", Html.GetEnumSelectList<Topics>()))
            <input class="form-control mr-sm-2" type="text" name="subtopic" placeholder="Search...">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        </form>
    </div>
</header>